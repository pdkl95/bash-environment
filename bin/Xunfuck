#!/bin/sh

XR="${HOME}/.Xresources"
MM="${HOME}/.Xmodmap"


# refresh the resource DB to make sure it's sane
[ -f $XR ] && xrdb -merge $XR


# refresh the modmap as well
if [ -f $MM ]; then
    xmodmap $MM
else
    xinput set-button-map "Logitech USB-PS/2 Optical Mouse" 1 8 3 4 5 6 7 2 9
    xmodmap -e "pointer = 1 8 3 4 5 6 7 2 9"
fi


# finally, make sure the easily-changed "xset" options are
# returned to where they should be

# QUIET, YOU!!!
xset b off

# this gets in the way
xset s off
xset -dpms

# the trailing 0 turns on an exponential function
# that is really intuitive
#xset m 3/2 0
xset m 7/5 0

# set repeat rate:
# [delay-to-start (ms), repeat rate (keys/s)]
xset r rate 250 36
